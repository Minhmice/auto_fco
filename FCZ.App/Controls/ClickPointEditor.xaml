<UserControl x:Class="FCZ.App.Controls.ClickPointEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FCZ.App">
    <UserControl.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </UserControl.Resources>
    <StackPanel Margin="10">
        <TextBlock Text="Click Point" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="ID:" VerticalAlignment="Center" Margin="0,2"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Id}" Margin="5,2"/>
            <Label Grid.Row="1" Grid.Column="0" Content="Point:" VerticalAlignment="Center" Margin="0,2"/>
            <Grid Grid.Row="1" Grid.Column="1" Margin="5,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="X:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Grid.Column="1" Text="{Binding Point.X}" Margin="0,0,10,0"/>
                <Label Grid.Column="2" Content="Y:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Grid.Column="3" Text="{Binding Point.Y}" Margin="0,0,10,0"/>
                <Button Grid.Column="4" Content="ðŸ“ Use Point" 
                       Command="{Binding DataContext.ScenarioEditor.UseSelectedPointCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                       Padding="5,2"
                       IsEnabled="{Binding DataContext.ScenarioEditor.PreviewPoint, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource NullToVisibilityConverter}}"/>
            </Grid>
        </Grid>
    </StackPanel>
</UserControl>

