<UserControl x:Class="FCZ.App.Controls.StepEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FCZ.App.Controls"
             xmlns:models="clr-namespace:FCZ.Core.Models;assembly=FCZ.Core">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type models:WaitForImageThenClickStep}">
            <local:WaitForImageThenClickEditor DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type models:WaitForImageStep}">
            <local:WaitForImageEditor DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type models:ClickTemplateStep}">
            <local:ClickTemplateEditor DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type models:ClickPointStep}">
            <local:ClickPointEditor DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type models:TypeTextStep}">
            <local:TypeTextEditor DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type models:WaitStep}">
            <local:WaitEditor DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type models:ConditionalBlockStep}">
            <local:ConditionalBlockEditor DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type models:LoopStep}">
            <local:LoopEditor DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type models:LogStep}">
            <local:LogEditor DataContext="{Binding}"/>
        </DataTemplate>
    </UserControl.Resources>
    <ContentControl Content="{Binding}">
        <ContentControl.Style>
            <Style TargetType="ContentControl">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding}" Value="{x:Null}">
                        <Setter Property="Content">
                            <Setter.Value>
                                <TextBlock Text="No step selected" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20"/>
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ContentControl.Style>
    </ContentControl>
</UserControl>

