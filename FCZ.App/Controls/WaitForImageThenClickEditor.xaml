<UserControl x:Class="FCZ.App.Controls.WaitForImageThenClickEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:FCZ.App.ViewModels">
    <StackPanel Margin="10">
        <TextBlock Text="Wait For Image Then Click" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="ID:" VerticalAlignment="Center" Margin="0,2"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}" Margin="5,2"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Template:" VerticalAlignment="Center" Margin="0,2"/>
            <ComboBox Grid.Row="1" Grid.Column="1" 
                     ItemsSource="{Binding DataContext.AvailableTemplates, RelativeSource={RelativeSource AncestorType=Window}}"
                     SelectedItem="{Binding Template, UpdateSourceTrigger=PropertyChanged}"
                     IsEditable="True"
                     Margin="5,2"/>

            <Label Grid.Row="2" Grid.Column="0" Content="Region:" VerticalAlignment="Top" Margin="0,2"/>
            <Grid Grid.Row="2" Grid.Column="1" Margin="5,2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="X:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Grid.Column="1" Text="{Binding Region.X, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,5,0"/>
                    <Label Grid.Column="2" Content="Y:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Grid.Column="3" Text="{Binding Region.Y, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,5,0"/>
                    <Label Grid.Column="4" Content="W:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Grid.Column="5" Text="{Binding Region.Width, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,5,0"/>
                    <Label Grid.Column="6" Content="H:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Grid.Column="7" Text="{Binding Region.Height, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
                <Button Grid.Row="1" Content="ðŸ“ Use Selected Region" 
                       Command="{Binding DataContext.ScenarioEditor.UseSelectedRegionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                       Margin="0,5,0,0" Padding="5,2" HorizontalAlignment="Left"
                       IsEnabled="{Binding DataContext.ScenarioEditor.PreviewRegion, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource NullToVisibilityConverter}}"/>
            </Grid>

            <Label Grid.Row="3" Grid.Column="0" Content="Threshold:" VerticalAlignment="Center" Margin="0,2"/>
            <Slider Grid.Row="3" Grid.Column="1" 
                   Minimum="0" Maximum="1" 
                   Value="{Binding Threshold, UpdateSourceTrigger=PropertyChanged}"
                   TickFrequency="0.1" IsSnapToTickEnabled="True"
                   Margin="5,2"/>
            <TextBlock Grid.Row="3" Grid.Column="1" 
                      Text="{Binding Threshold, StringFormat='{}{0:F2}'}" 
                      HorizontalAlignment="Right" 
                      VerticalAlignment="Center"
                      Margin="5,2"/>

            <Label Grid.Row="4" Grid.Column="0" Content="Timeout (ms):" VerticalAlignment="Center" Margin="0,2"/>
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding TimeoutMs, UpdateSourceTrigger=PropertyChanged}" Margin="5,2"/>

            <Label Grid.Row="5" Grid.Column="0" Content="Max Retries:" VerticalAlignment="Center" Margin="0,2"/>
            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding MaxRetries, UpdateSourceTrigger=PropertyChanged}" Margin="5,2"/>

            <Label Grid.Row="6" Grid.Column="0" Content="Delay After (ms):" VerticalAlignment="Center" Margin="0,2"/>
            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding DelayAfterMs, UpdateSourceTrigger=PropertyChanged}" Margin="5,2"/>
        </Grid>
    </StackPanel>
</UserControl>

