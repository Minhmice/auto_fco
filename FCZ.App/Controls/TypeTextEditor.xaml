<UserControl x:Class="FCZ.App.Controls.TypeTextEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="10">
        <TextBlock Text="Type Text" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="ID:" VerticalAlignment="Center" Margin="0,2"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Id}" Margin="5,2"/>
            <Label Grid.Row="1" Grid.Column="0" Content="Text:" VerticalAlignment="Top" Margin="0,2"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Text}" AcceptsReturn="True" TextWrapping="Wrap" Height="60" Margin="5,2"/>
            <Label Grid.Row="2" Grid.Column="0" Content="Target:" VerticalAlignment="Center" Margin="0,2"/>
            <ComboBox Grid.Row="2" Grid.Column="1" SelectedItem="{Binding Target}" Margin="5,2">
                <ComboBoxItem Content="region"/>
                <ComboBoxItem Content="window"/>
                <ComboBoxItem Content="screen"/>
            </ComboBox>
            <Label Grid.Row="3" Grid.Column="0" Content="Region:" VerticalAlignment="Top" Margin="0,2"/>
            <Grid Grid.Row="3" Grid.Column="1" Margin="5,2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="X:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Grid.Column="1" Text="{Binding Region.X}" Margin="0,0,5,0"/>
                    <Label Grid.Column="2" Content="Y:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Grid.Column="3" Text="{Binding Region.Y}" Margin="0,0,5,0"/>
                    <Label Grid.Column="4" Content="W:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Grid.Column="5" Text="{Binding Region.Width}" Margin="0,0,5,0"/>
                    <Label Grid.Column="6" Content="H:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Grid.Column="7" Text="{Binding Region.Height}"/>
                </Grid>
                <Button Grid.Row="1" Content="ðŸ“ Use Selected Region" 
                       Command="{Binding DataContext.ScenarioEditor.UseSelectedRegionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                       Margin="0,5,0,0" Padding="5,2" HorizontalAlignment="Left"/>
            </Grid>
            <Label Grid.Row="4" Grid.Column="0" Content="Clear Before:" VerticalAlignment="Center" Margin="0,2"/>
            <CheckBox Grid.Row="4" Grid.Column="1" IsChecked="{Binding ClearBefore}" VerticalAlignment="Center" Margin="5,2"/>
        </Grid>
    </StackPanel>
</UserControl>

